{% block create %}
    <turbo-stream action="append" target="conversations">
        <template>
            <div id="{{ 'conversation_' ~ id }}">{{ entity.id }}</div>
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="update" target="conversation_{{ id }}">
        <template>
            {{ entity.id }}, updated)
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" target="conversation_{{ id }}"></turbo-stream>
{% endblock %}